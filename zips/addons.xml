<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="repository.smashing" name="my smashing repo" version="0.0.1" provider-name="Me">
	<extension point="xbmc.addon.repository" name="my smashing repo">
		<dir>
		<info compressed="false">https://raw.githubusercontent.com/monthou66/repository.smashing/master/zips/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/monthou66/repository.smashing/master/zips/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/monthou66/repository.smashing/master/zips/</datadir>
		</dir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">smashing</summary>
		<description lang="en">really smashing</description>
		<genre>uk</genre>
	</extension>
</addon>

<addon id="script.me.smashingsync"
    name="my smashingsync script"
    version="1.0.0"
    provider-name="Me">
    <requires>
        <import addon="xbmc.python" version="2.14.0" />
    </requires>
    <extension point="xbmc.python.script" library="default.py" />
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Syncs stuff from smashing to and from userdata.  Hopefully.</summary>
        <platform>all</platform>
    </extension>
</addon>
</addons>
