<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.mysports"
       name="My Sports"
       version="0.0.13"
       provider-name="Me">
  <extension point="xbmc.python.pluginsource"
             library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Sports Streaming</summary>
    <description lang="en">Streaming video plugin</description>
    <platform>all</platform>
    <license>GPL 2.0</license>
  </extension>
  </addon>

<addon id="repository.smashing" name="my smashing repo" version="0.0.2" provider-name="Me">
	<extension point="xbmc.addon.repository" name="my smashing repo">
		<dir>
		<info compressed="false">https://raw.githubusercontent.com/monthou66/repository.smashing/master/zips/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/monthou66/repository.smashing/master/zips/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/monthou66/repository.smashing/master/zips/</datadir>
		</dir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">smashing</summary>
		<description lang="en">really smashing</description>
		<genre>uk</genre>
	</extension>
</addon>

<addon id="repository.smashing18" name="my smashing repo v18" version="0.0.2" provider-name="Me">
