		<genre>uk</genre>
	</extension>
</addon>

<addon id="script.me.getsettings"
    name="getsettings"
    version="1.0.0"
    provider-name="trogggy">
    <requires>
        <import addon="xbmc.python" version="2.14.0" />
    </requires>
    <extension point="xbmc.python.script" library="default.py" />
    <extension point="xbmc.addon.metadata">
        <summary lang="en">get settingsfrom script.me.testsettings.</summary>
        <platform>all</platform>
    </extension>
</addon>

<addon id="script.me.smashingsync"
